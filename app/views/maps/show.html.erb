<div>
  <div>
  <% if user_signed_in? && current_user.id == @map.user_id %>
    <%= link_to "Edit", edit_map_path(@map), class: "btn btn-flat-secondary" %>
    <%= link_to "Delete", map_path(@map), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-flat-secondary-danger" %>
  <% end %>
</div>

<div style="width: 100%; height: 100vh;"
  data-controller="map"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
  data-map-markers-value="<%= @markers.to_json %>"></div>
</div>
