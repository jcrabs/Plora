<div class="container mt-4">
  <h2>My Maps</h2>

  <div class="row">
    <% @maps.each do |map| %>
      <% if map.user == current_user %>
        <div class="col-md-4 mb-4 col-custom">
          <%= link_to map_path(map), class: "text-decoration-none" do %>
            <%= render "shared/mapcard", map: map %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <%= link_to "Add a map", new_map_path, class: "btn btn-primary" %>
  </div>
</div>
